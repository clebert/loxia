{
  "name": "loxia",
  "version": "0.5.0",
  "description": "Implementing JavaScript state machines using React Hooks.",
  "bugs": {
    "url": "https://github.com/clebert/loxia/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/loxia.git"
  },
  "license": "MIT",
  "author": "Clemens Akens <clebert@me.com>",
  "sideEffects": false,
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:cjs": "tsc --project tsconfig.cjs.json --incremental --pretty",
    "build:esm": "tsc --project tsconfig.esm.json --incremental --pretty",
    "ci": "run-p format:test lint test build",
    "postci": "size-limit",
    "format": "prettier --write '**/*.{html,js,json,md,ts,tsx,yml}'",
    "format:test": "prettier --list-different '**/*.{html,js,json,md,ts,tsx,yml}'",
    "lint": "tslint --config tslint.json --project tsconfig.json --format verbose",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "test": "jest"
  },
  "dependencies": {
    "batis": "^12.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.9",
    "@babel/preset-typescript": "^7.14.5",
    "@size-limit/preset-small-lib": "^5.0.2",
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "size-limit": "^5.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  },
  "size-limit": [
    {
      "path": "lib/esm/index.js",
      "limit": "500 B"
    }
  ]
}
